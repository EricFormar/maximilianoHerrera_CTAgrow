<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <main>
        <%- include("../partials/header") %>
        <div>
            <section class="Product-section">
                <div class="cinta-img-product">
                    <div class="img-product">
                        <img src="/images/products/<%= image %>" alt="productos <%= name %> ">
                    </div>
                </div>
                <article class="detail-product">
                    <h4 id="nombre-product-detail"><%= name %></h4>
                    <p id="precio-product-detail">$<%=price%></p>
                    <p id="descripcion-product-detail"><%= brand %></p>
                    <p><%= description %></p>
                    <form action="/shopcar/add" method="post">
                        <input type="hidden" name="productId" value="<%= id %>">
                        <input type="hidden" name="quantity" value="1">
                        <button type="submit">AGREGAR AL CARRO</button>
                    </form>
                    
                    <button>COMPRAR</button>
                </article>
            </section>
        </div>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>